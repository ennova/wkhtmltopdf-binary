#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

PLATFORM="$(uname -sm)"

case "$PLATFORM" in
  Darwin\ i386|Darwin\ x86_64)
    BINARY="$0-OSX-0.10.0_rc2-static-i386"
    ;;
  Linux\ x86_64)
    BINARY="$0-0.10.0_rc2-static-amd64"
    ;;
  *)
    echo "$(basename "$0"): Unsupported platform: $PLATFORM" >&2
    exit 1
    ;;
esac

exec "$BINARY" "$@"
