#!/usr/bin/env ruby

platform = `uname -sm`.chomp
platform = 'Darwin i386' if platform == 'Darwin x86_64'

suffix = case platform
when 'Darwin i386'
  'OSX-0.10.0_rc2-static-i386'
when 'Linux x86_64'
  '0.10.0_rc2-static-amd64'
else
  raise "Invalid platform. Must be running on linux or intel-based Mac OS."
end

system *$*.unshift("#{__FILE__}-#{suffix}")
